{% extends "base.html.twig" %}
{% block title 'Gestion des avis' %}
{% block body %}
    <div class="container">
        <h1 class="p-5">Gestion des avis</h1>
        <div class="col flex">
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">DATE</th>
                    <th scope="col">NOTE</th>
                    <th scope="col">COMMENTAIRE</th>
                    <th scope="col">TITRE DE LA VIDEO</th>
                    <th scope="col">Actions disponible</th>
                </tr>
                </thead>
                <tbody>
                {% for video , avi in tabavis %}
                    <tr>
                        <td>{{ avi.datetime|date("m/d") }}</td>
                        <td>
                            {% for i in 1..avi.note %}
                                ⭐
                            {% endfor %}
                        </td>
                        <td>
                            {% if avi.commentaire == null %}
                                ❌
                            {% else %}
                                ✔
                            {% endif %}
                        </td>
                        <td>
                            {{ video[:20] ~ '...' }}
                        </td>
                        <td>
                            <a href="{{ path('admin.avi.edit', {id : avi.id}) }}" class="btn btn-secondary">Edition</a>
                        </td>
                        <td>
                            <a href="{{ path('admin.avi.del', {id : avi.id}) }}" class="btn btn-danger">Suppression</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
